
.container {
	margin-top: 10px;
	margin-left: 10px;
	margin-right: 10px;
}
.article-title {
	font-weight: bold;
	text-align: center;
}
.article-info {
	color: grey;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-pack: justify;
